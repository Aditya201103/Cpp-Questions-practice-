#include <iostream>
using namespace std;

class Employee {
protected:
    int id;
public:
    void getId(int i) {
        id = i;
    }
};

class Payroll : public Employee {
    int salary;
public:
    void getSalary(int s) {
        salary = s;
    }
    void show() {
        cout << "ID: " << id << endl;
        cout << "Salary: " << salary;
    }
};

int main() {
    Payroll p;
    p.getId(101);
    p.getSalary(25000);
    p.show();
    return 0;
}
