#include <iostream>
using namespace std;

class Demo {
    int x;
public:
    Demo(int a) { x = a; }
    friend Demo operator+(Demo, Demo);
    void show() { cout << x; }
};

Demo operator+(Demo a, Demo b) {
    return Demo(a.x + b.x);
}

int main() {
    Demo d1(10), d2(20);
    Demo d3 = d1 + d2;
    d3.show();
    return 0;
}
