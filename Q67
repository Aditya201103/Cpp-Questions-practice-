#include <iostream>
using namespace std;

class Complex {
    int real, imag;
public:
    Complex(int r = 0, int i = 0) {
        real = r;
        imag = i;
    }
    friend Complex add(Complex, Complex);
    void show() {
        cout << real << " + " << imag << "i";
    }
};

Complex add(Complex a, Complex b) {
    return Complex(a.real + b.real, a.imag + b.imag);
}

int main() {
    Complex c1(2, 3), c2(4, 5);
    Complex c3 = add(c1, c2);
    c3.show();
    return 0;
}
