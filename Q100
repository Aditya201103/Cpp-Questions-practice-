#include <iostream>
using namespace std;

class Shape {
public:
    virtual void area() = 0;   // pure virtual function
};

class Rectangle : public Shape {
public:
    void area() {
        int l = 5, b = 4;
        cout << "Area = " << l * b;
    }
};

int main() {
    Shape *s;
    Rectangle r;
    s = &r;
    s->area();
    return 0;
}
